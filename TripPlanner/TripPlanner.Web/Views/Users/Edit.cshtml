@model TripPlanner.Core.Entities.User

<h1>Edit User</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Users" asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserID" value="@Model.UserID" />
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" id="Username" asp-for="Username">
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" asp-for="Password">
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email">
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Email)</div>
            </div>
            <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated" />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
