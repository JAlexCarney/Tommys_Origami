@model TripPlanner.Core.Entities.User

<h1>Remove User</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Users" asp-action="Remove" asp-route-id="@Model.UserID" method="post">
            <p>Would you like to remove @Model.UserID?</p>
            <p>Username: @Model.Username, Email: @Model.Email</p>
            <input type="hidden" asp-for="UserID" />
            <button class="btn btn-danger">Remove</button>
            <a asp-action="Index" asp-controller="Users">Go Back</a>
        </form>
    </div>
</div>