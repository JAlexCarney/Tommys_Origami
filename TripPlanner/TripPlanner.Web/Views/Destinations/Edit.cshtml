@model TripPlanner.Core.Entities.Destination

<h1>Edit Destination</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Agency" asp-action="Edit" asp-route-id="@Model.DestinationID" method="post">
            <input type="hidden" asp-for="DestinationID" />
            <div class="mb-3">
                <label asp-for="City" class="form-label">City</label>
                <input type="text" class="form-control" id="City" asp-for="City">
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label">State/Province</label>
                <input type="text" class="form-control" id="StateProvince" asp-for="City">
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label">Country</label>
                <input type="text" class="form-control" id="Country" asp-for="Country">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
